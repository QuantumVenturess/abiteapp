<div class="place_result" id="placeResult_<%= @results.index(place) %>">
  <div>
    <div class="image">
      <% if place['image_url'] %>
        <%= image_tag 'lazy.jpg', 'data-original' => place['image_url'], class: 'lazyLoad' %>
      <% else %>
        <%= image_tag 'place.png' %>
      <% end %>
    </div>
    <div class="title">
      <div class="name">
        <p>
          <%= place['name'] %>
        </p>
      </div>
      <div class="rating">
        <div class="yelpReviews <%= yelp_rating_to_class(place['rating']) %>"></div>
        <p><%= pluralize(place['review_count'], 'review') %></p>
      </div>
      <div class="location">
        <p>
          <% if place['location']['address'] && !place['location']['address'].empty? %>
            <%= place['location']['address'][0] %>,
          <% end %>
          <%= place['location']['city'] %>, 
          <%= place['location']['state_code'] %>
          <%= place['location']['postal_code'] %>
        </p>
      </div>
    </div>
    <div class="clear"></div>
  </div>
  <div class="table_form">
    <%= form_tag places_path, method: :post do %>
      <%= render partial: 'places/place_fields', object: place, as: :place %>
    <% end %>
    <div class="clear"></div>
  </div>
</div>