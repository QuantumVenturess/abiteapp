<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.png' %>
  <%= yield :head %>
  <meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, user-scalable=0; width=320">
<% if @mobile %>
  <style>
    body.imageBackground {
      background-image: url('/assets/bg_mobile.jpg');
    }
  </style>
<% else %>
  <style>
    body.imageBackground {
      background-image: url('/assets/bg.jpg');
    }
  </style>
<% end %>
<% if Rails.env.production? %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-40830839-1', 'abiteapp.com');
    ga('send', 'pageview');
  </script>
<% end %>
</head>
<body class="<%= yield :body_class %>">
  <% if signed_in? %>
    <%= render 'shared/tutorial' if !current_user.read_tutorial? %>
    <header>
      <%= render 'layouts/header' %>
    </header>
  <% end %>
  <div class="wrapper">
    <div class="content">
      <div class="flashMessage">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>">
            <%= image_tag 'close.png' %>
            <%= value %>
          </div>
        <% end %>
      </div>
      <%= yield %>
    </div>
  </div>
  <% if signed_in? %>
    <footer>
      <%= render 'layouts/footer' %>
    </footer>
  <% end %>
  <%= render 'shared/menu' %>
  <div class="spinner"></div>
</body>
</html>