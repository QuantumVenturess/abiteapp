<%= content_for :sitting_class do %>
  active
<% end %>
<div class="sitting">
  <div class="switch">
    <div class="readySwitch <%= @ready_switch %>">
      Tables ready to go
    </div>
    <div class="waitingSwitch <%= @waiting_switch %>">
      Tables waiting to fill
    </div>
  </div>
  <div class="ready <%= @ready_switch %>">
    <div class="tables">
      <%= render partial: 'seats/sitting_table', object: @seats_ready, as: :seats %>
    </div>
  </div>
  <div class="waiting <%= @waiting_switch %>">
    <div class="tables">
      <%= render partial: 'seats/sitting_table', object: @seats_waiting, as: :seats %>
    </div>
  </div>
</div>
<div class="page">
  <% if @ready.size > @waiting.size %>
    <%= render partial: 'shared/pagination', object: @seats_ready, as: :objects %>
  <% else %>
    <%= render partial: 'shared/pagination', object: @seats_waiting, as: :objects %>
  <% end %>
</div>