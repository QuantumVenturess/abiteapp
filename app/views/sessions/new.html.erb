<%= content_for :head do %>
  <style>
    .wrapper {
      padding: 0;
    }
  </style>
<% end %>
<%= content_for :body_class do %>
  imageBackground
<% end %>
<div class="signIn">
  <div class="biteLogo">
    <%= link_to about_path do %>
      <%= image_tag 'bite_image_logo.png' %>
    <% end %>
  </div>
  <div class="intro">
    <h1>Never eat alone</h1>
    <ol>
      <li>Start your own table so friends can join</li>
      <li>Join your friend's table</li>
      <li>Send messages to friends at your table</li>
    </ol>
  </div>
  <%= render partial: 'shared/facebook_auth' %>
  <%= link_to @ios_link, class: 'appStoreBadge', target: @target do %>
    <%= image_tag '/assets/app_store_badge.svg', type: 'image/svg+xml' %>
  <% end %>
</div>